<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostDAO">
 	<select id="SelectPostList" resultType="com.memo.post.model.Post">
 	SELECT
		`id`
		,`userId`
		,`subject`
		,`content`
		,`imagePath`
		,`createdAt`
		,`updatedAt`
 	FROM
 			`post`
 	WHERE
 		`userId` = #{userId}
 	ORDER BY `id` DESC		
 	</select>
 	<select id="getPostById" parameterType="int" resultType="com.memo.post.model.Post">
 	SELECT
		`id`
		,`userId`
		,`subject`
		,`content`
		,`imagePath`
		,`createdAt`
		,`updatedAt`
 	FROM
 			`post`
 	WHERE
 		`id` = #{id}
 	</select>
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
	 		`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	<update id="updatePostByUserIdPostId" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			<!-- imagePath가 있을떄만 수정한다. 마이바티스 동적쿼리 -->
 			<if test="imagePath != null">, `imagePath` = #{imagePath}</if>
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{postId} 
 			AND `userId` = #{userId}
 	</update>
 	<delete id="deletePostByUserIdPostId" parameterType="map">
 		DELETE
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 			AND `userId` = #{userId}
 	</delete>
 			
 </mapper>